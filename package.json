{
  "private": true,
  "name": "phone-store",
  "version": "0.1.3",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_OPTIONS=--openssl-legacy-provider preact watch -H phone-store.com --port 8080",
    "build": "cross-env NODE_ENV=production NODE_OPTIONS=--openssl-legacy-provider preact build --dest docs --no-prerender",
    "test": "jest",
    "lint": "eslint src"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "docs/"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^4.0.0",
    "eslint": "^8.30.0",
    "eslint-config-preact": "^1.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest-preset-preact": "^4.0.5",
    "jest": "^27.0.0",
    "postcss": "^8.4.21",
    "postcss-nesting": "^11.2.1",
    "preact-cli": "^3.4.2",
    "sirv-cli": "^2.0.2",
    "tailwindcss": "^3.2.7"
  },
  "dependencies": {
    "axios": "^1.3.3",
    "date-fns": "^2.29.3",
    "preact": "^10.11.3",
    "preact-render-to-string": "^5.2.6",
    "preact-router": "^3.2.1",
    "prop-types": "^15.8.1",
    "react-currency-format": "^1.1.0",
    "react-icons": "^4.7.1",
    "react-lazy-load-image-component": "^1.5.6"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMocks.js"
    }
  }
}
